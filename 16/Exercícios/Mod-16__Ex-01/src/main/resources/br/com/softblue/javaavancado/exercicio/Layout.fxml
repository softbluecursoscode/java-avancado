<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>

<GridPane xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="br.com.softblue.javaavancado.exercicio.DiasDaSemana"
	vgap="10" hgap="10">
	<padding>
		<Insets top="10" bottom="10" left="10" right="10" />
	</padding>

	<Button fx:id="btn0" prefWidth="100" GridPane.columnIndex="0"
		GridPane.rowIndex="0" />
	<Button fx:id="btn1" prefWidth="100" GridPane.columnIndex="1"
		GridPane.rowIndex="0" />
	<Button fx:id="btn2" prefWidth="100" GridPane.columnIndex="2"
		GridPane.rowIndex="0" />
	<Button fx:id="btn3" prefWidth="100" GridPane.columnIndex="3"
		GridPane.rowIndex="0" />
	<Button fx:id="btn4" prefWidth="100" GridPane.columnIndex="4"
		GridPane.rowIndex="0" />
	<Button fx:id="btn5" prefWidth="100" GridPane.columnIndex="5"
		GridPane.rowIndex="0" />
	<Button fx:id="btn6" prefWidth="100" GridPane.columnIndex="6"
		GridPane.rowIndex="0" />

	<HBox GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="7" alignment="CENTER">
		<Button fx:id="btnChange" prefWidth="250" onAction="#onClick" />
	</HBox>
</GridPane>

