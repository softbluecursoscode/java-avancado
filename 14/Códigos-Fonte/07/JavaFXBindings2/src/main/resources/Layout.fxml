<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Spinner?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.softblue.java.javafx.Controller"
	alignment="CENTER" vgap="10" hgap="10">

	<Text text="Dados do UsuÃ¡rio" GridPane.columnIndex="0"
		GridPane.rowIndex="0" GridPane.columnSpan="2" style="-fx-font: 20px 'Arial';" />

	<Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="1" />

	<TextField fx:id="txtNome" GridPane.columnIndex="1"
		GridPane.rowIndex="1" />

	<Label text="Idade:" GridPane.columnIndex="0" GridPane.rowIndex="2" />

	<Spinner  fx:id="spnIdade" GridPane.columnIndex="1"
		GridPane.rowIndex="2" />

	<Label text="Possui filhos:" GridPane.columnIndex="0"
		GridPane.rowIndex="3" />

	<CheckBox fx:id="chkFilhos" GridPane.columnIndex="1"
		GridPane.rowIndex="3" />

	<HBox alignment="CENTER_RIGHT" spacing="5.0" GridPane.columnIndex="0"
		GridPane.rowIndex="4" GridPane.columnSpan="2">
		<GridPane.margin>
			<Insets top="20" />
		</GridPane.margin>
		<Button fx:id="btnLimpar" text="Limpar" onAction="#limpar" />
		<Button fx:id="btnConfirmar" text="Confirmar" onAction="#confirmar" />
	</HBox>

</GridPane>

